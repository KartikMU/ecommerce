<!doctype html>
<html lang="zxx">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>RightOnTime</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/slicknav.css">
    <link rel="stylesheet" href="/assets/css/animate.min.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="/assets/css/themify-icons.css">
    <link rel="stylesheet" href="/assets/css/slick.css">
    <link rel="stylesheet" href="/assets/css/nice-select.css">
    <link rel="stylesheet" href="/assets/css/style.css">
  </head>

  <body>
    <header>
    <!-- Header Start -->
      <div class="header-area">
        <div class="main-header header-sticky">
          <div class="container-fluid">
            <div class="menu-wrapper">				
              <div class="main-menu d-none d-lg-block">
                <nav>                                                
                  <ul id="navigation">  
                    <li><a href="/home/index">Home</a></li>
                    <li><a href="/users/sign_in">Login</a></li>
                    <li><a href="/users/sign_up">Registration</a></li>
                    <li><a href="/admin/login">Admin</a></li>
                    <li><a href="/gallery/index">Gallery</a></li>   
                  </ul>
                </nav>
              </div>
            </div> 
          </div>
        </div>
      </div>
    </header>
    <div class="slider-area ">
      <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="hero-cap text-center">
                <h2>Checkout</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <style>
      cent {
        padding: 5%;
        border: 2px solid;
        text-align: center;
        background-color: #e90a06d5; 
      }  
      outer {
        padding-left: 25%;
        padding-right: 25%;
        padding-bottom: 8%;
        padding-top: 8% ;
      }
      table {
          border: 1px solid black;
          padding: 5px;
          border-color: #0b0b0b;
          border-collapse: none;
      }
    </style> 
    <div id="footer_left">
      <img src="/assets/img/gallery/mcard.png" alt="Master Card" width= "22%" height = "20%" />|<img src="/assets/img/gallery/vcard.png" alt="Visa Card" width= "22%" height = "20%" />|<img src="/assets/img/gallery/paypal.png" alt="PayPal" width= "22%" height = "20%"  />|<img src="/assets/img/gallery/rpay.png" alt="RazorPay Secured" width= "22%" height = "20%"  />
    </div>
      <%= flash[:notice]%><br />
    <div class="outer">
      <div class="cent">  
        <h3>Total Amount to paid : <%= number_to_currency(session[:amount]) %></h3>
        <%= form_with url: "/gallery/checkout", method: :post do |f| %>

          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name %>
          </div>
          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name %>
          </div>
          <div class="field">
            <%= f.label :credit_card_no %><br />
            <%= f.text_field :credit_no %>
          </div>
          <div class="field">
            <%= f.label :date_of_expiry %><br />
              <select name="check[month]" id="check_out_month">
                <option selected value="01">Janurary 
                <option  value="02">Feburary
                <option  value="03">March
                <option  value="04">April 
                <option  value="05">May 
                <option  value="06">June 
                <option  value="07">July 
                <option  value="08">August 
                <option  value="09">September 
                <option  value="10">October 
                <option  value="11">November 
                <option  value="12">December 
              </select>
              <select name="check[year]" id=check_out_year">
                <option selected value="2022">2022
                <option  value="2023">2023
                <option  value="2024">2024
                <option  value="2025">2025
                <option  value="2026">2026
                <option  value="2027">2027
                <option  value="2028">2028
                <option  value="2029">2029
                <option  value="2030">2030
                <option  value="2031">2031
                <option  value="2032">2032
                <option  value="2033">2033
            </select>
          </div>

          <div class="field">
            <%= f.label :verification_number %><br />
            <%= f.text_field :verification_number %>
          </div>
          <br/><br/>
          <div class="actions">
            <button class="button"><%= f.submit "Submit"%></button>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Footer Start-->
    <footer>
      <div class="footer-area footer-padding">
        <div class="container">
          <div class="row d-flex justify-content-between">
            <div class="col-xl-3 col-lg-3 col-md-5 col-sm-6">
              <div class="single-footer-caption mb-50">
                <div class="single-footer-caption mb-30">
                  <div class="footer-logo">
                    <a href="index.html"><img src="/assets/img/gallery/tyou1.png" width= "600 "alt=""></a>                         
                  </div>
                </div>
              </div>
            </div>          
          </div>
        </div>
      </div>    
    </footer>
  </body>
</html>

  