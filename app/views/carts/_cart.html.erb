<!doctype html>
<html lang="zxx">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>RightOnTime</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="manifest" href="site.webmanifest">
        <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

        <!-- CSS here -->
        <link rel="stylesheet" href="assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="assets/css/owl.carousel.min.css">
        <link rel="stylesheet" href="assets/css/flaticon.css">
        <link rel="stylesheet" href="assets/css/slicknav.css">
        <link rel="stylesheet" href="assets/css/animate.min.css">
        <link rel="stylesheet" href="assets/css/magnific-popup.css">
        <link rel="stylesheet" href="assets/css/fontawesome-all.min.css">
        <link rel="stylesheet" href="assets/css/themify-icons.css">
        <link rel="stylesheet" href="assets/css/slick.css">
        <link rel="stylesheet" href="assets/css/nice-select.css">
        <link rel="stylesheet" href="assets/css/style.css">
    </head>

    <body>
        <header>
        <!-- Header Start -->
            <div class="header-area">
                <div class="main-header header-sticky">
                    <div class="container-fluid">
                        <div class="menu-wrapper">
		        			<div class="mg">
                                <div class="main-menu d-none d-lg-block">
                                    <nav>                                                
                                        <ul id="navigation">  
                                            <li><a href="/home/index">Home</a></li>
                                            <li><a href="/users/sign_in">Login</a></li>
                                            <li><a href="/users/sign_up">Registration</a></li>
                                            <li><a href="/admin/login">Admin</a></li>
                                            <li><a href="/gallery/index">Gallery</a></li>   
                                        </ul>
                                    </nav>
                                </div>
						    </div>
                        </div>
                    </div>
                </div>
            </div>        
        </header>
        <!--Main-->
        <main>
            <div class="slider-area ">
                <div class="single-slider slider-height2 d-flex align-items-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="hero-cap text-center">
                                    <h2>Your Cart</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!--================Cart Area =================-->
            <section class="cart_area section_padding">
                <div class="container">
                    <div class="cart_inner">
                        <div class="table-responsive">
                            <table class="table">
                                <% unless cart.line_items.empty? %>
                                    <table class="table">
                                        <%= render(cart.line_items) %>
                                        <tr class="table">
                                            <td class="table" colspan="2">Total</td>
                                            <td class="table"><%= number_to_currency(cart.total_price)  %></td>
                                        </tr>
                                    </table>
                                
                                    <% session[:amount] = cart.total_price%>
                                    <button class="button"><%= link_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?' %></button>|
                                    <button class="button"><%= link_to "Continue Shopping",:controller=>"gallery",:action=>"index" %></button> | 
                                    <% if user_signed_in? %>
                                            <button class="button"><%= link_to "Checkout", gallery_checkout_path,:amount=>cart.total_price  %></button>
                                    <% else %>
                                            <%= link_to "login", new_user_session_path  %>
                                    <% end %>
                                <% end %>
                            </table>
                        </div>
                    </div>
                </div>    
            </section>
        <!--================End Cart Area =================-->
        </main>
        <!-- Footer Start-->
        <footer>
            <div class="footer-area footer-padding">
                <div class="container">
                    <div class="row d-flex justify-content-between">
                        <div class="col-xl-3 col-lg-3 col-md-5 col-sm-6">
                            <div class="single-footer-caption mb-50">
                                <div class="single-footer-caption mb-30">
                                    <div class="footer-logo">
                                        <a href="index.html"><img src="/assets/img/gallery/tyou1.png" width= "600 "alt=""></a>
                                    </div>    
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>    
        </footer>
    </body>
</html>






